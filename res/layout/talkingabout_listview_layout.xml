<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/touxiang_imageview"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="11.8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12dp"
        android:background="#ff11ff"/>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="5.6dp">
	<TextView
	    android:id="@+id/name_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="paxoap"
	    android:layout_marginTop="4dp"
	    android:textSize="12.9sp"
	    android:textColor="#bebebe"/>
	<TextView
	    android:id="@+id/talk_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="说说你两口子的口味是否相同"
	    android:layout_marginTop="6dp"
	    android:textSize="10.2sp"
	    android:textColor="#3f3f3f"/>
	</LinearLayout>
	<TextView
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"/>
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="2016/05/06"
	    android:layout_marginTop="14.9dp"
	    android:layout_marginRight="16.7dp"
	    android:textSize="9.3sp"
	    android:textColor="#bbbbbb"
	    android:id="@+id/time_textview"/>
</LinearLayout>